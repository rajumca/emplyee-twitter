{{textarea class="form-control"  value=tweet cols="79" rows="5" maxlength="160"}}
    <div class="text-right"> <button type="submit" class="btn btn-primary {{if isTweetEmpty 'disabled'}}" {{action "tweet"}} >tweet</button></div>
{{#if (not-eq tempTweet null)}}
    <div class="tweet">
        <div>
            <span class="name font-weight-bold">{{tempTweet.user.name}}</span> 
            <span class="user_name">@{{tempTweet.user.userName}}</span>
            <span class="tweet_time">.</span>
            <span class="tweet_time"> {{moment-format tempTweet.time  'MMMM D, YYYY h:mm A'}}</span>
        </div>
        <div class="">{{tempTweet.message}}</div>
    </div>
{{/if}}

{{#each tweets as |tweet| }}
    <div class="tweet">
        <div>
            <span class="name font-weight-bold">{{tweet.user.name}}</span> 
            <span class="user_name">@{{tweet.user.userName}}</span>
            <span class="tweet_time">.</span>
            <span class="tweet_time"> {{moment-format tweet.time  'MMMM D, YYYY h:mm A'}}</span>
        </div>
        <div class="mt-2">{{tweet.message}}</div>
    </div>
{{/each}}

{{#if noTweets}}
    <div class="row  align-middle mt-4">
                <div class="col-1"></div>
                 <div class="col-6 align-middle">
                    <h5> No tweets to display</h5>
               </div>
     </div>
{{/if}}
{{yield}}